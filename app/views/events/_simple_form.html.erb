<%= simple_form_for(@event) do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.input :description, input_html: { class: "form-control" } %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.input :dt_begin, as: :string, input_html: { class: "form-control datepicker" } %>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="form-group">
        <%= f.input :dt_end, as: :string, input_html: { class: "form-control datepicker" } %>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
